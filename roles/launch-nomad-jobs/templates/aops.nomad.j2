job "aops_job" {
  datacenters = ["246bp"]
  type        = "service"

  group "aops_group" {
    count = 1

    network {
      port "aops_port" {
        static       = "7444"
        to           = "5001"
        host_network = "tailscale"
      }
    }

    restart {
      attempts = 3
      interval = "25m"
      delay    = "1m"
      mode     = "delay"
    }

    task "aops_prod" {
      driver = "docker"

      env = {
        FB_API_KEY = "{{ json_query(AopsJson.secrets.FB_API_KEY) }}"
        FB_AUTH_DOMAIN = "{{ json_query(AopsJson.secrets.FB_AUTH_DOMAIN) }}"
        FB_BUCKET = "{{ json_query(AopsJson.secrets.FB_BUCKET) }}"
        FB_DB_URL = "{{ json_query(AopsJson.secrets.FB_DB_URL) }}"
        MADE_BY = "{{ json_query(AopsJson.secrets.MADE_BY) }}"
        MY_DOMAIN = "{{ json_query(AopsJson.secrets.MY_DOMAIN) }}"
        POWERED_BY = "{{ json_query(AopsJson.secrets.POWERED_BY) }}"
        RECP_1 = "{{ json_query(AopsJson.secrets.RECP_1) }}"
        RECP_2 = "{{ json_query(AopsJson.secrets.RECP_2) }}"
        SECRET = "{{ json_query(AopsJson.secrets.SECRET) }}"
        Y_EMAIL = "{{ json_query(AopsJson.secrets.Y_EMAIL) }}"
        Y_PWD = "{{ json_query(AopsJson.secrets.Y_PWD) }}"
      }

      config {
        image = "rounakdatta/aops"
        ports = ["aops_port"]

      }
    }

  }
}

