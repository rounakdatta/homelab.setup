job "servarr_job" {
  datacenters = ["246bp"]
  type        = "service"

  group "servarr_group" {
    count = 1

    network {
      port "radarr_port" {
        static       = "12001"
        to           = "7878"
        host_network = "tailscale"
      }
    }

    volume "servarr_data_volume" {
      type      = "host"
      source    = "servarr_base_data_hdd_volume"
      read_only = false
    }

    volume "servarr_config_volume" {
      type      = "host"
      source    = "servarr_base_config_hdd_volume"
      read_only = false
    }

    restart {
      attempts = 10
      interval = "25m"
      delay    = "1m"
      mode     = "delay"
    }

    task "radarr" {
      driver = "docker"

      env = {
        PUID = "1000"
        PGID = "1000"
        TZ   = "Asia/Kolkata"
      }

      volume_mount {
        volume      = "servarr_data_volume"
        destination = "/data"
        read_only   = false
      }

      volume_mount {
        volume      = "servarr_config_volume"
        destination = "/config"
        read_only   = false
      }

      config {
        image = "cr.hotio.dev/hotio/radarr:latest"
        ports = ["radarr_port"]
      }
    }

  }
}
